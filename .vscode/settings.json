// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    "json.schemas": [
        {
            "fileMatch": [
                "*.yaml",
                "*.eyaml",
                "*.yml",
                "*.eyml"
            ],
            "schema": {
                "title": "JSON schema for Mashling config file",
                "$schema": "",
                "type": "object",
                "properties": {
                    "gateway": {
                        "type": "object",
                        "required": [
                            "name",
                            "version",
                            "configurations",
                            "triggers",
                            "event_handlers",
                            "event_links"
                        ],
                        "description": "Mashling json gateway object",
                        "properties": {
                            "name": {
                                "default": "demoapp",
                                "description": "My Mashling application name",
                                "type": "string"
                            },
                            "version": {
                                "default": "1.0.0",
                                "description": "version number",
                                "type": "string"
                            },
                            "description": {
                                "default": "My Mashling application description",
                                "description": "Application description",
                                "type": "string"
                            },
                            "configurations": {
                                "type": "array",
                                "description": "Application configurations",
                                "items": {
                                    "type": "object",
                                    "description": "configurations Object",
                                    "required": [
                                        "name",
                                        "type",
                                        "settings"
                                    ],
                                    "properties": {
                                        "name": {
                                            "default": "",
                                            "description": "kafkaConfig",
                                            "type": "string"
                                        },
                                        "type": {
                                            "default": "github.com/TIBCOSoftware/flogo-contrib/config/kafkaConfig",
                                            "description": "version number",
                                            "type": "string"
                                        },
                                        "description": {
                                            "default": "Configuration for kafka cluster",
                                            "description": "Configuration for kafka cluster",
                                            "type": "string"
                                        },
                                        "settings": {
                                            "type": "object",
                                            "description": "Configuration for kafka cluster",
                                            "additionalProperties": {
                                                "type": "string"
                                            },
                                            "properties": {
                                                "brokers": {
                                                    "anyOf": [
                                                        {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string",
                                                                "default": "localhost:9092"
                                                            }
                                                        },
                                                        {
                                                            "type": "string",
                                                            "default": "localhost:9092"
                                                        }
                                                    ]
                                                },
                                                "username": {
                                                    "type": "string",
                                                    "default": "admin",
                                                    "description": "Username description"
                                                },
                                                "password": {
                                                    "type": "string",
                                                    "default": "admin",
                                                    "description": "Password description"
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            "triggers": {
                                "type": "array",
                                "description": "Application triggers",
                                "items": {
                                    "type": "object",
                                    "description": "triggers Object",
                                    "required": [
                                        "name",
                                        "type",
                                        "settings"
                                    ],
                                    "properties": {
                                        "name": {
                                            "default": "",
                                            "description": "kafkaConfig",
                                            "type": "string"
                                        },
                                        "type": {
                                            "default": "github.com/TIBCOSoftware/flogo-contrib/trigger/kafkaConsumer",
                                            "description": "version number",
                                            "type": "string"
                                        },
                                        "description": {
                                            "default": "The trigger on 'orders' topic",
                                            "description": "Configuration for kafka cluster",
                                            "type": "string"
                                        },
                                        "settings": {
                                            "type": "object",
                                            "description": "input object",
                                            "properties": {
                                                "port": {
                                                    "type": "string",
                                                    "default": "9096",
                                                    "description": "port"
                                                },
                                                "method": {
                                                    "type": "string",
                                                    "default": "GET",
                                                    "description": "Password description"
                                                },
                                                "path": {
                                                    "type": "string",
                                                    "default": "/v1/mg/users/:userId",
                                                    "description": "Password description"
                                                },
                                                "topic": {
                                                    "type": "string",
                                                    "default": "orders",
                                                    "description": "Password description"
                                                },
                                                "config": {
                                                    "type": "string",
                                                    "default": "${}",
                                                    "description": "Config"
                                                }
                                            }
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "event_handlers": {
                                "oneOf": [
                                    {
                                        "type": "array",
                                        "description": "Application event_handlers",
                                        "items": {
                                            "type": "object",
                                            "description": "event_handlers object",
                                            "required": [
                                                "name"
                                            ],
                                            "default": {
                                                "name": "get_pet_success_handler",
                                                "description": "Handle the pet access",
                                                "definition": {},
                                                "params": {
                                                    "uri": "petstore.swagger.io/v2/pet/3"
                                                }
                                            },
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "default": "",
                                                    "description": "event handler name"
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "default": "",
                                                    "description": "event handler description"
                                                },
                                                "definition": {
                                                    "type": "object",
                                                    "description": "event handler input",
                                                    "properties": {
                                                        "data": {
                                                            "type": "object",
                                                            "properties": {
                                                                "flow": {
                                                                    "type": "object",
                                                                    "properties": {
                                                                        "type": {
                                                                            "type": "integer",
                                                                            "default": 1
                                                                        },
                                                                        "attributes": {
                                                                            "type": "array"
                                                                        },
                                                                        "rootTask": {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "id": {
                                                                                    "type": "integer",
                                                                                    "default": 1
                                                                                },
                                                                                "type": {
                                                                                    "type": "integer",
                                                                                    "default": 1
                                                                                },
                                                                                "tasks": {
                                                                                    "type": "array",
                                                                                    "items": {
                                                                                        "type": "object",
                                                                                        "properties": {
                                                                                            "id": {
                                                                                                "type": "integer",
                                                                                                "default": 2
                                                                                            },
                                                                                            "name": {
                                                                                                "type": "string",
                                                                                                "default": "Log Message"
                                                                                            },
                                                                                            "description": {
                                                                                                "type": "string",
                                                                                                "default": "Simple Log Activity"
                                                                                            },
                                                                                            "type": {
                                                                                                "type": "integer",
                                                                                                "default": 1
                                                                                            },
                                                                                            "activityType": {
                                                                                                "type": "string",
                                                                                                "default": "tibco-log"
                                                                                            },
                                                                                            "activityRef": {
                                                                                                "type": "string",
                                                                                                "default": "github.com/TIBCOSoftware/flogo-contrib/activity/log"
                                                                                            },
                                                                                            "attributes": {
                                                                                                "type": "array",
                                                                                                "items": {
                                                                                                    "type": "object",
                                                                                                    "properties": {
                                                                                                        "name": {
                                                                                                            "type": "string",
                                                                                                            "default": "message"
                                                                                                        },
                                                                                                        "value": {
                                                                                                            "type": "string",
                                                                                                            "default": "${}"
                                                                                                        },
                                                                                                        "required": {
                                                                                                            "type": "boolean",
                                                                                                            "default": false
                                                                                                        },
                                                                                                        "type": {
                                                                                                            "type": "string",
                                                                                                            "default": "string"
                                                                                                        }
                                                                                                    }
                                                                                                }
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                },
                                                                                "links": {
                                                                                    "type": "array"
                                                                                },
                                                                                "attributes": {
                                                                                    "type": "array"
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        },
                                                        "id": {
                                                            "type": "string",
                                                            "default": "order_success_handler"
                                                        },
                                                        "ref": {
                                                            "type": "string",
                                                            "default": "github.com/TIBCOSoftware/flogo-contrib/action/flow"
                                                        }
                                                    }
                                                },
                                                "params": {
                                                    "type": "object",
                                                    "description": "event handler input",
                                                    "properties": {
                                                        "time-span": {
                                                            "type": "string",
                                                            "default": "minute"
                                                        },
                                                        "message": {
                                                            "type": "string",
                                                            "default": "${}"
                                                        },
                                                        "limit": {
                                                            "type": "integer",
                                                            "default": 1001
                                                        }
                                                    }
                                                }
                                            },
                                            "additionalProperties": false
                                        },
                                        "additionalItems": false
                                    },
                                    {
                                        "type": "array",
                                        "description": "Application event_handlers",
                                        "items": {
                                            "type": "object",
                                            "description": "event_handlers object",
                                            "required": [
                                                "name"
                                            ],
                                            "default": {
                                                "name": "get_pet_success_handler",
                                                "description": "Handle the pet access",
                                                "reference": "github.com/TIBCOSoftware/mashling-lib/flow/flogo.json",
                                                "params": {
                                                    "uri": "petstore.swagger.io/v2/pet/3"
                                                }
                                            },
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "default": "",
                                                    "description": "event handler name"
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "default": "",
                                                    "description": "event handler description"
                                                },
                                                "params": {
                                                    "type": "object",
                                                    "description": "event handler input",
                                                    "properties": {
                                                        "time-span": {
                                                            "type": "string",
                                                            "default": "minute"
                                                        },
                                                        "message": {
                                                            "type": "string",
                                                            "default": "${}"
                                                        },
                                                        "limit": {
                                                            "type": "integer",
                                                            "default": 1001
                                                        }
                                                    }
                                                },
                                                "reference": {
                                                    "type": "string",
                                                    "default": "github.com/TIBCOSoftware/mashling/flows/ConsoleErrorHandler/flow.json",
                                                    "description": "event handler reference"
                                                }
                                            },
                                            "additionalProperties": false
                                        },
                                        "additionalItems": false
                                    }
                                ]
                            },
                            "event_links": {
                                "type": "array",
                                "description": "Application triggers",
                                "items": {
                                    "type": "object",
                                    "description": "event links Object",
                                    "required": [
                                        "trigger",
                                        "success_paths"
                                    ],
                                    "default": {
                                        "trigger": "rest_trigger",
                                        "success_paths": [
                                            {
                                                "handler": "get_pet_success_handler"
                                            }
                                        ]
                                    },
                                    "properties": {
                                        "trigger": {
                                            "type": "string",
                                            "description": "event-links triggers",
                                            "default": ""
                                        },
                                        "success-paths": {
                                            "type": "array",
                                            "description": "event-links success path",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "condition": {
                                                        "type": "string",
                                                        "default": "${trigger.content.Country == \"USA\"}"
                                                    },
                                                    "handler": {
                                                        "type": "string",
                                                        "default": "SuccessHandler"
                                                    }
                                                }
                                            }
                                        },
                                        "error-paths": {
                                            "type": "array",
                                            "description": "event-links error path",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "condition": {
                                                        "type": "string",
                                                        "default": ""
                                                    },
                                                    "handler": {
                                                        "type": "string",
                                                        "default": "ErrorHandler"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false
            }
        }
    ]
}