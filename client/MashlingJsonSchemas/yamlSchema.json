{
    "title": "JSON schema for Mashling config file",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "gateway": {
            "type": "object",
            "description": "Mashling json gateway object",
            "required": [
                "name",
                "version",
                "configurations",
                "triggers",
                "event_handlers",
                "event_links"
            ],
            "properties": {
                "name": {
                    "default": "demoapp",
                    "description": "Mashling gateway name",
                    "type": "string"
                },
                "version": {
                    "default": "1.0.0",
                    "description": "Mashling gateway version",
                    "type": "string"
                },
                "description": {
                    "default": "My Mashling application description",
                    "description": "Mashling gateway description",
                    "type": "string"
                },
                "configurations": {
                    "type": "array",
                    "description": "Gateway Configurations",
                    "items": {
                        "type": "object",
                        "description": "Configurations Object",
                        "required": [
                            "name",
                            "type",
                            "settings"
                        ],
                        "default": {
                            "name": "kafkaConfig",
                            "type": "github.com/wnichols/kafkasub",
                            "description": "Configuration for kafka cluster",
                            "settings": {
                                "BrokerUrl": "localhost:9092",
                                "username": "abc",
                                "password": "xyz"
                            }
                        },
                        "properties": {
                            "name": {
                                "default": "",
                                "description": "Configuration name",
                                "type": "string"
                            },
                            "type": {
                                "default": "github.com/TIBCOSoftware/flogo-contrib/config/kafkaConfig",
                                "description": "Configuration type",
                                "type": "string"
                            },
                            "description": {
                                "default": "Configuration for kafka cluster",
                                "description": "Configuration description",
                                "type": "string"
                            },
                            "settings": {
                                "type": "object",
                                "description": "Configuration settings",
                                "additionalProperties": {
                                    "type": "string"
                                },
                                "properties": {
                                    "BrokerUrl": {
                                        "type": "string",
                                        "default": "localhost:9092",
                                        "description": "Configuration settings BrokerUrl"
                                    },
                                    "username": {
                                        "type": "string",
                                        "default": "admin",
                                        "description": "Configuration settings username"
                                    },
                                    "password": {
                                        "type": "string",
                                        "default": "admin",
                                        "description": "Configuration settings password"
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    },
                    "additionalProperties": false
                },
                "triggers": {
                    "type": "array",
                    "description": "Gateway Triggers",
                    "items": {
                        "type": "object",
                        "description": "Triggers Object",
                        "required": [
                            "name",
                            "type",
                            "settings"
                        ],
                        "default": {
                            "name": "rest_trigger",
                            "description": "The trigger on 'pets' endpoint",
                            "type": "github.com/TIBCOSoftware/flogo-contrib/trigger/rest",
                            "settings": {}
                        },
                        "properties": {
                            "name": {
                                "default": "",
                                "description": "Trigger name",
                                "type": "string"
                            },
                            "type": {
                                "default": "github.com/TIBCOSoftware/flogo-contrib/trigger/kafkaConsumer",
                                "description": "Trigger type",
                                "type": "string"
                            },
                            "description": {
                                "default": "The trigger on 'orders' topic",
                                "description": "Trigger description",
                                "type": "string"
                            },
                            "settings": {
                                "type": "object",
                                "description": "Trigger settings",
                                "default": {}
                            }
                        },
                        "additionalProperties": false
                    },
                    "additionalProperties": false
                },
                "event_handlers": {
                    "type": "array",
                    "description": "Gateway Handlers",
                    "items": {
                        "anyOf": [
                            {
                                "type": "object",
                                "description": "event_handlers object",
                                "required": [
                                    "name"
                                ],
                                "default": {
                                    "name": "get_pet_success_handler",
                                    "description": "Handle the pet access",
                                    "reference": "github.com/TIBCOSoftware/mashling-lib/flow/flogo.json",
                                    "params": {
                                        "uri": "petstore.swagger.io/v2/pet/3"
                                    }
                                },
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "default": "get_pet_success_handler",
                                        "description": "Handler name"
                                    },
                                    "description": {
                                        "type": "string",
                                        "default": "Handle the pet access",
                                        "description": "Handler description"
                                    },
                                    "params": {
                                        "type": "object",
                                        "description": "Handler params",
                                        "properties": {
                                            "uri": {
                                                "type": "string",
                                                "default": "petstore.swagger.io/v2/pet/3",
                                                "description": "Handler params uri"
                                            }
                                        },
                                        "additionalProperties": {
                                            "type": "string"
                                        }
                                    },
                                    "reference": {
                                        "type": "string",
                                        "default": "github.com/TIBCOSoftware/mashling/flows/ConsoleErrorHandler/flow.json",
                                        "description": "event handler reference"
                                    }
                                },
                                "additionalProperties": false
                            },
                            {
                                "type": "object",
                                "description": "event_handlers object",
                                "required": [
                                    "name"
                                ],
                                "default": {
                                    "name": "get_pet_success_handler",
                                    "description": "Handle the pet access",
                                    "definition": {},
                                    "params": {
                                        "uri": "petstore.swagger.io/v2/pet/3"
                                    }
                                },
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "default": "",
                                        "description": "event handler name"
                                    },
                                    "description": {
                                        "type": "string",
                                        "default": "",
                                        "description": "event handler description"
                                    },
                                    "definition": {
                                        "type": "object",
                                        "description": "event handler input",
                                        "properties": {
                                            "data": {
                                                "type": "object",
                                                "description": "Handler definition data",
                                                "properties": {
                                                    "flow": {
                                                        "type": "object",
                                                        "description": "Handler flow",
                                                        "properties": {
                                                            "type": {
                                                                "type": "integer",
                                                                "description": "Handler type",
                                                                "default": 1
                                                            },
                                                            "attributes": {
                                                                "type": "array",
                                                                "description": "Handler attributes"
                                                            },
                                                            "rootTask": {
                                                                "type": "object",
                                                                "description": "Handler rootTask",
                                                                "properties": {
                                                                    "id": {
                                                                        "type": "integer",
                                                                        "description": "Handler rootTask id",
                                                                        "default": 1
                                                                    },
                                                                    "type": {
                                                                        "type": "integer",
                                                                        "description": "Handler rootTask type",
                                                                        "default": 1
                                                                    },
                                                                    "tasks": {
                                                                        "type": "array",
                                                                        "description": "Handler rootTask task array",
                                                                        "items": {
                                                                            "type": "object",
                                                                            "properties": {
                                                                                "id": {
                                                                                    "type": "integer",
                                                                                    "default": 2,
                                                                                    "description": "Handler rootTask task id"
                                                                                },
                                                                                "name": {
                                                                                    "type": "string",
                                                                                    "default": "Log Message",
                                                                                    "description": "Handler rootTask task name"
                                                                                },
                                                                                "description": {
                                                                                    "type": "string",
                                                                                    "default": "Simple Log Activity",
                                                                                    "description": "Handler rootTask task description"
                                                                                },
                                                                                "type": {
                                                                                    "type": "integer",
                                                                                    "default": 1,
                                                                                    "description": "Handler rootTask task type"
                                                                                },
                                                                                "activityType": {
                                                                                    "type": "string",
                                                                                    "default": "tibco-log",
                                                                                    "description": "Handler rootTask task activity type"
                                                                                },
                                                                                "activityRef": {
                                                                                    "type": "string",
                                                                                    "default": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                                                                                    "description": "Handler rootTask task activity reference"
                                                                                },
                                                                                "attributes": {
                                                                                    "type": "array",
                                                                                    "description": "Handler rootTask task activity attributes",
                                                                                    "items": {
                                                                                        "type": "object",
                                                                                        "description": "Handler rootTask task activity attributes object",
                                                                                        "properties": {
                                                                                            "name": {
                                                                                                "type": "string",
                                                                                                "description": "Handler rootTask task activity attributes name",
                                                                                                "default": "message"
                                                                                            },
                                                                                            "value": {
                                                                                                "type": "string",
                                                                                                "description": "Handler rootTask task activity attributes value",
                                                                                                "default": "${}"
                                                                                            },
                                                                                            "required": {
                                                                                                "type": "boolean",
                                                                                                "description": "Handler rootTask task activity attributes required property",
                                                                                                "default": false
                                                                                            },
                                                                                            "type": {
                                                                                                "type": "string",
                                                                                                "description": "Handler rootTask task activity attributes type property",
                                                                                                "default": "string"
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    },
                                                                    "links": {
                                                                        "type": "array",
                                                                        "description": "Handler rootTask links"
                                                                    },
                                                                    "attributes": {
                                                                        "type": "array",
                                                                        "description": "Handler rootTask attributes"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            },
                                            "id": {
                                                "type": "string",
                                                "description": "Handler definition id",
                                                "default": "order_success_handler"
                                            },
                                            "ref": {
                                                "type": "string",
                                                "description": "Handler definition ref",
                                                "default": "github.com/TIBCOSoftware/flogo-contrib/action/flow"
                                            }
                                        }
                                    },
                                    "params": {
                                        "type": "object",
                                        "description": "Handler params",
                                        "properties": {
                                            "uri": {
                                                "type": "string",
                                                "default": "petstore.swagger.io/v2/pet/3",
                                                "description": "Handler params uri"
                                            }
                                        }
                                    }
                                },
                                "additionalProperties": false
                            }
                        ]
                    },
                    "additionalProperties": false
                },
                "event_links": {
                    "type": "array",
                    "description": "Gateway event links",
                    "items": {
                        "type": "object",
                        "description": "event links Object",
                        "required": [
                            "triggers",
                            "dispatches"
                        ],
                        "default": {
                            "triggers": "rest_trigger",
                            "dispatches": [
                                {
                                    "if": "${}",
                                    "handler": "get_pet_success_handler"
                                }
                            ]
                        },
                        "properties": {
                            "triggers": {
                                "type": "string",
                                "description": "Event links triggers",
                                "default": ""
                            },
                            "dispatches": {
                                "type": "array",
                                "description": "Event links dispatch",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "if": {
                                            "type": "string",
                                            "description": "Event links dispatch if condition",
                                            "default": "${trigger == \"\"}"
                                        },
                                        "handler": {
                                            "type": "string",
                                            "description": "Event links dispatch handler",
                                            "default": "SuccessHandler"
                                        }
                                    }
                                }
                            }
                        },
                        "additionalProperties": false
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}