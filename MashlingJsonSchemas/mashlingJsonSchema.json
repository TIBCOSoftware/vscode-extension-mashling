                            "type": "string"
                        },
                        "configurations": {
                            "$ref": "configurationsSchema.json#/configurations"
                        },
                        "triggers": {
                            "$ref": "triggersSchema.json#/triggers"
                        },
                        "event_handlers": {
                            "anyOf": [
                                {
                                    "$ref": "eventhandlersSchema.json#/event_handlers_with_inline_actions"
